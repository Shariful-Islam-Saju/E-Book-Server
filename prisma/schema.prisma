generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  mobile    String   @unique
  userType  UserType @default(USER)
  password  String
  ip        String?
  userAgent String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Lead {
  id        String   @id @default(uuid())
  name      String?
  mobile    String   @unique
  ip        String?
  userAgent String?
  address   String?
  ebookId   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model EBook {
  id          String   @id @default(uuid())
  title       String
  url         String
  htmlCode    String?
  slug        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  imgUrl      String?
  fileName    String?
  // Relations
  reviews Review[]

  @@index([slug])
}

model Review {
  id          String   @id @default(uuid())
  title       String
  rating      Int
  description String
  reviewBy    String
  mobile      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  profileImg  String?
  FacebookImg String?
  // Relation with cascade
  ebookId     String
  ebook       EBook @relation(fields: [ebookId], references: [id], onDelete: Cascade)
}


enum UserType {
  SUPERADMIN
  ADMIN
  USER
}
