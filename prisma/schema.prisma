generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  mobile    String   @unique
  userType  UserType @default(USER)
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Lead {
  id        String   @id @default(uuid())
  name      String?
  mobile    String   @unique
  address   String?
  ebookId   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model EBook {
  id          String   @id @default(uuid())
  title       String
  url         String
  htmlCode    String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  reviews Review[]
}

model Review {
  id          String   @id @default(uuid())
  title       String
  rating      Int
  description String
  reviewBy    String
  mobile      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relation with cascade
  ebookId     String
  ebook       EBook @relation(fields: [ebookId], references: [id], onDelete: Cascade)
}


enum UserType {
  ADMIN
  USER
}
